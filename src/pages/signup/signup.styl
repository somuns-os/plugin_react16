@import "~@/styles/index.styl"
.signup {
  position: fixed
  left: 0
  right: 0
  bottom: 0
  top: 0
  display: flex;
  flex-direction: column;
  justify-content: center;

  .avatar-box {
    width: 40%
    margin: 0 auto;
    .avatar-uploader {
      padding: 0 0 20px 110px;
      .ant-upload {
        width: 128px;
        height: 128px;
        margin: 0 auto;
        overflow: hidden;
        img {
          width: 100%;
          height: 100%;
        }
      }
    }
  }
  
  .form-content {
    margin: 0 auto;
    width: 40%
  }
  .form-footer {
    .opera {
      width: 100%
      display: flex
      justify-content: space-between
      align-items: center
      .target-login {
        .login-text {
          color: _text_color;
          font-style: normal
          cursor: pointer
        }
      }
    }
  }
}
